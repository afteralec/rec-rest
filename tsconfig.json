{
  "compilerOptions": {
    "target": "es2016",
    "module": "nodenext",
    "rootDir": ".",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}
